<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="info" name="MastermindMain" packages="es.unileon.prg1.mastermind">
      <Appenders>
        <File name="MyFile" fileName="logs/app.log">
          <PatternLayout>
            <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
          </PatternLayout>
        </File>
      </Appenders>
      <Loggers>
         
        <Root level="info">
          <AppenderRef ref="MyFile"/>
        </Root>
      </Loggers>
    </Configuration>